<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/thumbnail_gambar"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:background="@drawable/logo"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />
    <ImageView
        android:id="@+id/thumbnail_profile"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:background="@drawable/logo"
        android:layout_below="@+id/thumbnail_gambar"/>
    <TextView
        android:id="@+id/nama"
        android:text="Contoh Saja"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="15dp"
        android:textStyle="bold"
        android:layout_below="@+id/thumbnail_gambar"
        android:layout_toRightOf="@+id/thumbnail_profile"/>
    <TextView
        android:id="@+id/deskripsi"
        android:text="Tulis captionnya disini"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_below="@+id/nama"
        android:layout_toRightOf="@+id/thumbnail_profile"/>
</RelativeLayout>